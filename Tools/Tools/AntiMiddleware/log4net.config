<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
		<param name="PreserveLogFileNameExtension" value="true" />
		<file value="Logs/system/" />
		<datePattern value="yyyy-MM-dd.'log'"/>
		<staticLogFileName value="false"/>
		<appendToFile value="true"/>
		<rollingStyle value="Composite"/>
		<maxSizeRollBackups value="100"/>
		<maximumFileSize value="4MB"/>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="[%date] [%level] %message %newline"/>
		</layout>
	</appender>
	<appender name="Queries" type="log4net.Appender.RollingFileAppender">
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
		<param name="PreserveLogFileNameExtension" value="true" />
		<file value="Logs/queries/" />
		<datePattern value="yyyy-MM-dd.'log'"/>
		<staticLogFileName value="false"/>
		<appendToFile value="true"/>
		<rollingStyle value="Composite"/>
		<maxSizeRollBackups value="100"/>
		<maximumFileSize value="4MB"/>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="[%date] [%level] %message %newline"/>
		</layout>
	</appender>
	<appender name="Data" type="log4net.Appender.RollingFileAppender">
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
		<param name="PreserveLogFileNameExtension" value="true" />
		<file value="Logs/data/" />
		<datePattern value="yyyy-MM-dd.'log'"/>
		<staticLogFileName value="false"/>
		<appendToFile value="true"/>
		<rollingStyle value="Composite"/>
		<maxSizeRollBackups value="100"/>
		<maximumFileSize value="4MB"/>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="[%date] [%level] %message %newline"/>
		</layout>
	</appender>

	<appender name="Status" type="log4net.Appender.RollingFileAppender">
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
		<param name="PreserveLogFileNameExtension" value="true" />
		<file value="Logs/status/" />
		<datePattern value="yyyy-MM-dd.'log'"/>
		<staticLogFileName value="false"/>
		<appendToFile value="true"/>
		<rollingStyle value="Composite"/>
		<maxSizeRollBackups value="100"/>
		<maximumFileSize value="4MB"/>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="[%date] [%level] %message %newline"/>
		</layout>
	</appender>
	<root>
		<level value="ALL" />
		<appender-ref ref="RollingLogFileAppender" />
	</root>
	<logger additivity="false" name="Queries">
		<level value="INFO"/>
		<appender-ref ref="Queries" />
	</logger>
	<logger additivity="false" name="Data">
		<level value="INFO"/>
		<appender-ref ref="Data" />
	</logger>
	<logger additivity="false" name="RollingLogFileAppender">
		<level value="ALL"/>
		<appender-ref ref="RollingLogFileAppender" />
	</logger>
	<logger additivity="false" name="Status">
		<level value="ALL"/>
		<appender-ref ref="Status" />
	</logger>
</log4net>
